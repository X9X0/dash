# =============================================================================
# Dash - Nginx SSL/HTTPS Configuration Template
# =============================================================================
# This is a TEMPLATE for HTTPS deployment. Do not use directly.
#
# Quick setup with Let's Encrypt:
#   1. First deploy with dash.conf (HTTP only)
#   2. Install certbot:
#      Ubuntu/Debian: sudo apt install certbot python3-certbot-nginx
#      Fedora: sudo dnf install certbot python3-certbot-nginx
#   3. Run: sudo certbot --nginx -d yourdomain.com
#   4. Certbot will automatically modify your nginx config
#
# Manual setup:
#   1. Copy this file to /etc/nginx/sites-available/dash (Ubuntu/Debian)
#      or /etc/nginx/conf.d/dash.conf (Fedora)
#   2. Replace YOUR_DOMAIN with your actual domain
#   3. Update SSL certificate paths
#   4. Test: sudo nginx -t
#   5. Reload: sudo systemctl reload nginx
# =============================================================================

upstream dash_backend {
    server 127.0.0.1:3001;
    keepalive 64;
}

# HTTP - Redirect all traffic to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name YOUR_DOMAIN;

    # Allow Let's Encrypt ACME challenge
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # Redirect everything else to HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS - Main server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name YOUR_DOMAIN;

    # ==========================================================================
    # SSL Certificate Configuration
    # ==========================================================================
    # Let's Encrypt certificates (certbot will set these automatically):
    ssl_certificate /etc/letsencrypt/live/YOUR_DOMAIN/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/YOUR_DOMAIN/privkey.pem;

    # Or use your own certificates:
    # ssl_certificate /etc/ssl/certs/dash.crt;
    # ssl_certificate_key /etc/ssl/private/dash.key;

    # ==========================================================================
    # Modern SSL Settings (TLS 1.2+ only)
    # ==========================================================================
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    # SSL session settings
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:50m;
    ssl_session_tickets off;

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    # ==========================================================================
    # Security Headers
    # ==========================================================================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # HSTS - Strict Transport Security (enable after testing HTTPS works)
    # Uncomment to enable HSTS (forces HTTPS for 1 year):
    # add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # Logging
    access_log /var/log/nginx/dash_access.log;
    error_log /var/log/nginx/dash_error.log;

    # Max upload size
    client_max_body_size 50M;

    # Proxy timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;

    # WebSocket configuration for Socket.io
    location /socket.io/ {
        proxy_pass http://dash_backend;
        proxy_http_version 1.1;

        # Required for WebSocket
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Extended timeouts for WebSocket connections
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;

        # Disable buffering for real-time
        proxy_buffering off;
        proxy_cache off;
    }

    # All other routes
    location / {
        proxy_pass http://dash_backend;
        proxy_http_version 1.1;

        # Standard proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Connection "";

        # Buffering settings
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
    }
}
